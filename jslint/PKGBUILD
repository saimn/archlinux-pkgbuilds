# Contributor: BlackEagle < ike DOT devolder AT gmail DOT com >
pkgname=jslint
pkgver=0.5.2
pkgrel=2
pkgdesc="Command-line JSLint, installed through npm"
arch=('any')
url="https://github.com/reid/node-jslint"
license=('Custom BSD')
depends=('nodejs')
source=("https://github.com/reid/node-jslint/archive/v$pkgver.tar.gz")
sha256sums=("603591bda18d8b8f362e53d0c969c501276b2ae9032a680e44b9c721cc617e65")

package() {
  cd "$srcdir/node-$pkgname-$pkgver"
  mkdir -p $pkgdir/usr
  npm install --user root -g --prefix="$pkgdir/usr"
  install -D -m644 "$srcdir/node-$pkgname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
